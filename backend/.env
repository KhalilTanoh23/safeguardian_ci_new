# ===== LOGGING =====
LOG_LEVEL=debug
LOG_PATH=/var/log/safeguardian

# ===== SESSION =====
SESSION_LIFETIME=3600  # 1 heure
REMEMBER_ME_LIFETIME=2592000  # 30 jours

# ===== RATE LIMITING =====
RATE_LIMIT_LOGIN=5        # 5 tentatives
RATE_LIMIT_DURATION=900   # 15 minutes
RATE_LIMIT_API=100        # 100 requêtes
RATE_LIMIT_API_WINDOW=3600  # Par heure

# ===== SÉCURITÉ =====
HASH_ALGORITHM=bcrypt
PASSWORD_MIN_LENGTH=8
FORCE_HTTPS=false  # À mettre à true en production

# ===== DÉVELOPPEMENT =====
DEV_MODE=true
DISPLAY_ERRORS=true
XDEBUG_ENABLED=false

# ===== MONITORING =====
SENTRY_DSN=
MONITORING_ENABLED=false
